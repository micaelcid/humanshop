package Menu;


import java.io.BufferedReader;
import java.io.IOException;
import java.sql.SQLException;


public class Menu {
	

	public static int menuPrincipal(BufferedReader br) throws NumberFormatException, IOException  {
		System.out.println("----MENU------");
		System.out.println("1. Cadastro de Animal");
		System.out.println("2. Deletar Animal");
		System.out.println("3. Listar Animais");
		System.out.println("4. Cadastro de Humano");
		System.out.println("5. Deletar Humano");
		System.out.println("6. Listar Humanos");
		System.out.println("7. Sair");
		int opc = Integer.valueOf(br.readLine());
		return opc;
		
	}}

// esta parte colocaria no main

package Menu;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

import Animal.Animal;
import humano.Humano;


public class Inicio {

	public static void inicio() throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader (new InputStreamReader(System.in));
			while(true) {
				
			int opc = Menu.menuPrincipal(br);
			
			switch (opc) {
				case 1: System.out.println("Teste1"); break;
				case 2: System.out.println("Teste2"); break;
				case 3: System.out.println("Teste3"); break;
				case 4: System.out.println("Teste3"); break;
				case 5: System.out.println("Teste3"); break;
				case 6: System.out.println("Teste3"); break;
				case 7:	{br.close();return;}
			default: {
				System.out.println("OPC invalida");
			}}
		}
		
	}

	public static void main(String[]args) throws NumberFormatException, IOException {
			
		
		inicio();
	}

